<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/purple_700">

    <ImageView
        android:background="@android:color/transparent"
        android:layout_width="@dimen/view_45"
        android:padding="@dimen/view_10"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_dehaze_24"
        android:id="@+id/img_drawer"
        android:layout_height="@dimen/view_45" />

    <TextView

        android:layout_centerVertical="true"

        android:id="@+id/txt_title"
        android:textSize="@dimen/txt_20"
        android:layout_marginLeft="@dimen/view_20"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/img_drawer"
        android:text="Rent Car"

        android:layout_height="wrap_content" />



</RelativeLayout>